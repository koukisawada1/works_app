<div class="post-show">
	<div class="container">
		<div class="theTarget">
			<% @post.images.each do |image| %>
				<%= attachment_image_tag image, :image, fallback: "no_image.jpg", class: "show-img" %>
			<% end %>
		</div>
	</div>
	<div class="full-screen-open">
		<p>FULL SCREEN</p>
	</div>
	<div class="full-screen">
		<div class="container">
			<div class="theTarget">
				<% @post.images.each do |image| %>
					<%= attachment_image_tag image, :image, fallback: "no_image.jpg", class: "show-img" %>
				<% end %>
			</div>
			<div class="full-screen-close"></div>
		</div>
	</div>
	<div class="post-contents">
		<div class="post-title">
			<p><%= @post.title %></p>
		</div>
		<div class="post-text">
			<p><%= simple_format(@post.body) %></p>
		</div>
		<% if user_signed_in? %>
			<div class="post-image-edit">
				<p><%= link_to "編集", edit_post_path(@post) %></p>
			</div>
			<div class="post-image-new">
				<%= form_for [@post, @image] do |f| %>
					<%= f.attachment_field :image %>
					<%= f.submit '追加' %>
				<% end %>
			</div>
		<% end %>
	</div>
</div>